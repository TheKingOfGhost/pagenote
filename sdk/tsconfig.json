{
    "compilerOptions": {
        "outDir": "./es/",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": [
        "./src/common/**/*.ts"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
